<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/image_MemberList_Image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/textView_MemberList_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium Text"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/image_MemberList_Image"
        android:layout_toEndOf="@+id/image_MemberList_Image" />

    <TextView
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="리더"
        android:id="@+id/textView_MemberList_Leader"
        android:textColor="@color/colorAccent"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp"
        android:gravity="center_horizontal" />
</RelativeLayout>