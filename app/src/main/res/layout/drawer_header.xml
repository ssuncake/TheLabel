<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="160dp">
    <!--android:background="@drawable/gradation"-->
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/relativeLayout5"
    android:layout_centerVertical="true"
    android:layout_toLeftOf="@+id/relativeLayout6"
    android:layout_toStartOf="@+id/relativeLayout6">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_MainHeader_Profile"
        android:src="@drawable/img_user"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_height="@dimen/genre_height"
        android:id="@+id/imageView_MainHeader_Ganre"
        android:background="@drawable/rounded_black"
        android:textColor="@color/designColor"
        android:text="장르"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignBottom="@+id/imageView_MainHeader_Profile"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:id="@+id/relativeLayout6">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_MainHeader_Name"
        android:textColor="#ff000000"
        android:text="워니몬"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff333333"
        android:text="#보컬"
        android:id="@+id/textView_MainHeader_Position"
        android:layout_below="@+id/textView_MainHeader_Name"
        android:layout_alignLeft="@+id/textView_MainHeader_Name"
        android:layout_alignStart="@+id/textView_MainHeader_Name" />

</RelativeLayout>


</RelativeLayout>