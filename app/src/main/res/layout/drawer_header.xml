<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="160dp">
    <!--android:background="@drawable/gradation"-->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_MainHeader_Profile"
        android:src="@drawable/profile_girl"
        android:layout_marginLeft="@dimen/drawer_header_margin"
        android:layout_marginTop="@dimen/drawer_header_margin" />

    <ImageView
        android:layout_width="64dp"
        android:layout_height="@dimen/genre_height"
        android:id="@+id/imageView_MainHeader_Ganre"
        android:src="@drawable/genre_hiphap"
        android:layout_alignBottom="@+id/imageView_MainHeader_Profile"
        android:layout_alignRight="@+id/imageView_MainHeader_Profile"
        android:layout_alignEnd="@+id/imageView_MainHeader_Profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView_MainHeader_Name"
        android:layout_alignTop="@+id/imageView_MainHeader_Profile"
        android:layout_toRightOf="@+id/imageView_MainHeader_Profile"
        android:layout_toEndOf="@+id/imageView_MainHeader_Profile"
        android:layout_marginLeft="29dp"
        android:layout_marginStart="29dp"
        android:textColor="#ff000000"
        android:text="워니몬" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ff333333"
        android:text="#보컬"
        android:id="@+id/textView_MainHeader_Position"
        android:layout_below="@+id/textView_MainHeader_Name"
        android:layout_alignLeft="@+id/textView_MainHeader_Name"
        android:layout_alignStart="@+id/textView_MainHeader_Name" />

</RelativeLayout>