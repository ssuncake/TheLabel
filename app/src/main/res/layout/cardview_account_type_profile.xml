<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cardView_musicContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardView_margin"
        android:orientation="vertical"
        android:background="@android:color/black">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/color_white"
        >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView_user_profile"
        android:layout_marginLeft="40dp"
        android:layout_marginStart="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Hani_exid"
            android:textSize="15sp"
            android:id="@+id/textView_profile_username"
            android:textColor="@android:color/black"
            android:layout_below="@+id/imageView_setting"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="#랩 #서울 은평구"
            android:id="@+id/textView_profile_subtitle"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_below="@+id/textView_profile_username"
            android:layout_alignLeft="@+id/textView_profile_username"
            android:layout_alignStart="@+id/textView_profile_username"
            android:layout_alignRight="@+id/textView_profile_description"
            android:layout_alignEnd="@+id/textView_profile_description" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/DummyText_account"
            android:id="@+id/textView_profile_description"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_alignBottom="@+id/imageView_user_profile"
            android:layout_alignLeft="@+id/textView_profile_username"
            android:layout_alignStart="@+id/textView_profile_username" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/imageView_setting"
            android:src="@drawable/btn_setting"
            android:layout_marginRight="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>