<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView_musicContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/cardView_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView_profile"
                    android:layout_toRightOf="@+id/imageView_profile"
                    android:text="Hani_exid"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@android:color/black"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/imageView_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/profile_girl" />

                <ImageView
                    android:id="@+id/imageView_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="17dp"
                    android:layout_marginRight="17dp"
                    android:src="@drawable/menu" />

            </RelativeLayout>

                   <com.google.android.youtube.player.YouTubePlayerView
                    android:id="@+id/youtube_view"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/cardView_Like_ShareButton_Size">
                <ImageView
                    android:src="@android:drawable/btn_star_big_on"
                    android:layout_width="@dimen/cardView_LikeImage_size"
                    android:layout_height="@dimen/cardView_LikeImage_size"
                    android:id="@+id/imageView"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:text="좋아요 0개"
                    android:textColor="@color/error_color"
                    android:id="@+id/textView_likeText"
                    android:textSize="@dimen/cardView_LikeImage_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/imageView"
                    android:layout_toEndOf="@+id/imageView" />
                <ImageButton
                    android:id="@+id/imageButton_like_button_cardView"
                    android:src="@android:drawable/btn_star_big_off"
                    android:layout_width="@dimen/cardView_Like_ShareButton_Size"
                    android:layout_height="@dimen/cardView_Like_ShareButton_Size"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/imageButton_share_cardView"
                    android:layout_toStartOf="@+id/imageButton_share_cardView" />
                <ImageButton
                    android:src="@android:drawable/ic_menu_share"
                    android:layout_width="@dimen/cardView_Like_ShareButton_Size"
                    android:layout_height="@dimen/cardView_Like_ShareButton_Size"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:id="@+id/imageButton_share_cardView" />

            </RelativeLayout>


            <TextView
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/DummyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>