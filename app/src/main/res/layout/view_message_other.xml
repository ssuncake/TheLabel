<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/messageother_mainpadding">

    <ImageView
        android:layout_width="@dimen/messageother_imagesize"
        android:layout_height="@dimen/messageother_imagesize"
        android:id="@+id/imageView_MessageOther_ImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="250dp"
        android:text="New Text"
        android:id="@+id/textView_MessageOther_Text"
        android:background="@drawable/img_message_stranger_fix"
        android:layout_alignTop="@+id/imageView_MessageOther_ImageView"
        android:layout_toRightOf="@+id/imageView_MessageOther_ImageView"
        android:layout_toEndOf="@+id/imageView_MessageOther_ImageView"
        android:layout_marginLeft="@dimen/message_text_margin" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/textView_MessageOther_Date"
        android:layout_alignBottom="@+id/textView_MessageOther_Text"
        android:layout_toRightOf="@+id/textView_MessageOther_Text"
        android:layout_toEndOf="@+id/textView_MessageOther_Text"
        android:layout_marginLeft="@dimen/message_date_margin" />
</RelativeLayout>