<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/border"
    android:padding="5dp">
    <ImageView
        android:id="@+id/image_search_labelimage"
        android:src="@drawable/img_label_search"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="보컬"
        android:textSize="20sp"
        android:gravity="center"
        android:id="@+id/textView_search_labelName"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView_search_label_genre"
        android:layout_alignStart="@+id/textView_search_label_genre"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:minWidth="40dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="보컬"
        android:gravity="center"
        android:textSize="11sp"
        android:background="@drawable/rounded_black"
        android:layout_marginTop="5dp"
        android:textColor="@color/PINK_400"
        android:id="@+id/textView_search_label_genre"
        android:layout_marginLeft="130dp"
        android:layout_below="@+id/textView_search_labelName"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:paddingLeft="4dp"
        android:paddingRight="4dp" />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/imageView_search_label_like"
        android:src="@drawable/btn_like_off"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView_search_label_genre"
        android:layout_marginLeft="136dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7"
        android:textSize="16sp"
        android:id="@+id/textView_search_label_likeCount"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/textView_search_label_genre"
        android:layout_toRightOf="@+id/imageView_search_label_like"
        android:layout_toEndOf="@+id/imageView_search_label_like" />


