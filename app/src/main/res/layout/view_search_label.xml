<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/border">
    <ImageView
        android:id="@+id/image_search_labelimage"
        android:src="@drawable/img_label_search"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="보컬"
        android:textSize="15sp"
        android:gravity="center"
        android:id="@+id/textView_search_labelName"
        android:layout_alignTop="@+id/image_search_labelimage"
        android:layout_toRightOf="@+id/image_search_labelimage"
        android:layout_toEndOf="@+id/image_search_labelimage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="30dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="보컬"
        android:gravity="center"
        android:textSize="11sp"
        android:background="@drawable/rounded_black"
        android:layout_marginTop="5dp"
        android:textColor="@color/PINK_400"
        android:id="@+id/textView_search_label_genre"
        android:layout_marginLeft="130dp"
        android:layout_below="@+id/textView_search_labelName"
       />


