<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/border">
    <ImageView
        android:id="@+id/image_search_labelimage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="보컬"
        android:textSize="15sp"
        android:id="@+id/textView_search_labelName"
        android:layout_alignTop="@+id/image_search_labelimage"
        android:layout_toRightOf="@+id/image_search_labelimage"
        android:layout_toEndOf="@+id/image_search_labelimage"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="보컬"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/search_position_city_town"
        android:id="@+id/textView_search_label_genre"
        android:layout_below="@+id/textView_search_labelName"
        android:layout_alignLeft="@+id/textView_search_labelName"
        android:layout_alignStart="@+id/textView_search_labelName" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="도"
        android:textSize="15sp"
        android:textColor="@color/search_position_city_town"
        android:id="@+id/textView_search_label_position"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/textView_search_label_genre"
        android:layout_alignLeft="@+id/textView_search_label_genre"
        android:layout_alignStart="@+id/textView_search_label_genre" />


</RelativeLayout>