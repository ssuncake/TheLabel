<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team.nuga.thelabel.Fragment.LabelMakeFragment"
    android:gravity="center"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="레이블 생성 프레그먼트"
        android:layout_gravity="center"
        android:textColor="#ff0000" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_MakeLabel_InputName"
        android:layout_gravity="center_horizontal"
        android:text="레이블 이름" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생성 취소"
        android:id="@+id/button_LabelMake_Cancel"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="생성 완료"
        android:id="@+id/button_LabelMake_Complete"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
